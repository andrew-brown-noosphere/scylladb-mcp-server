# ScyllaDB MCP Server Environment Variables
# Copy this file to .env and fill in your values

# AWS Credentials for DynamoDB comparison
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# ScyllaDB Alternator endpoint
SCYLLA_ALTERNATOR_ENDPOINT=http://your-scylla-endpoint:8000

# ScyllaDB Cloud credentials (if using CQL)
SCYLLA_HOST=your-scylla-host
SCYLLA_USERNAME=your-username
SCYLLA_PASSWORD=your-password
SCYLLA_DC=your-datacenter

# Connection mode: docker, cloud, or alternator
SCYLLA_CONNECTION_MODE=docker